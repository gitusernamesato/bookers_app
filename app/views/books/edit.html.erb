<body>
<h1>Editing Book</h1>
<% if @book.errors.any? %>
<div class="error-box">
 <div class="error-count">
   <%= @book.errors.count %> errors prohibited this book from being saved:
 </div>
 <ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
 </ul>
</div>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<div class="field">
  <label for="book_title">Title</label>
   <br><%= f.text_field :title %></br>
</div>
<div class="field">
   <label for="book_body">Body</label>
   <br><%= f.text_area :body %></br>
</div>
  <div class="action"><%= f.submit 'Update Book' %></div>
  <br><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></br>
  <% end %>

</body>