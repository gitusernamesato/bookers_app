<body>
<h1>Books</h1>

<div>
 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
 </thead>
 <% @books.each do |book| %>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to "Show", book_path(book.id) %></th>
      <th><%= link_to "Edit", edit_book_path(book.id) %></th>
      <th><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm"=> "Are you sure？"%></th>
    </tr>
 <% end %>  
 </table>

</div>
<div>
<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %></br>
<% end %>
</div>


</body>